<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="93"
        android:orientation="horizontal"
        android:weightSum="100" >			<!-- MainArea -->	

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="40"
            android:paddingRight="5dp"
            android:background="#000000"
            android:orientation="vertical" >			<!-- LeftColumn -->
            
            <LinearLayout
          	  	android:layout_width="fill_parent"
		        android:layout_height="0dp"
    		    android:layout_weight="60"
        		android:orientation="horizontal"
	        	android:weightSum="100"
	        	android:layout_marginBottom="5dp"
	        	android:background="#7C78FA" >           <!-- Blue_LeftTop -->     
            </LinearLayout>
            
            <LinearLayout
          	  	android:layout_width="fill_parent"
		        android:layout_height="0dp"
    		    android:layout_weight="60"
        		android:orientation="horizontal"
	        	android:weightSum="100"
	        	android:layout_marginBottom="5dp"
	        	android:background="#F57ACA" >                <!-- Pink_LeftBottom -->
            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#000000"
            android:layout_weight="60" >			<!-- RightColumn -->
            
            <LinearLayout
          	  	android:layout_width="fill_parent"
		        android:layout_height="0dp"
    		    android:layout_weight="33"
        		android:orientation="horizontal"
	        	android:weightSum="100"
	        	android:layout_marginBottom="5dp"
	        	android:background="#940C15" >                <!-- Red_RightTop -->
            </LinearLayout>
            
            <LinearLayout
          	  	android:layout_width="fill_parent"
		        android:layout_height="0dp"
    		    android:layout_weight="33"
        		android:orientation="horizontal"
	        	android:layout_marginBottom="5dp"
	        	android:weightSum="100"
	        	android:background="#D6D0D0" >                <!-- Grey_RightMid -->
            </LinearLayout>
            
            <LinearLayout
          	  	android:layout_width="fill_parent"
		        android:layout_height="0dp"
    		    android:layout_weight="33"
        		android:orientation="horizontal"
	        	android:weightSum="100"
	        	android:layout_marginBottom="5dp"
	        	android:background="#060859" >                <!-- Blue_RightBottom -->
            </LinearLayout>
            
            
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="0dp"
        	android:layout_weight="7"
        	android:background="#000000" >			<!-- Black_BottomBar -->

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
    </LinearLayout>
    
</LinearLayout>